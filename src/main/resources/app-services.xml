<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
    <import resource="classpath*:jbean-service.xml" />
    <import resource="classpath*:jmis-service.xml" />

    <!-- rest 配置范例，仅供测试使用 -->
    <bean id="Hello1" class="cn.cerc.sample.services.HelloWorld" scope="prototype">
        <property name="restPath" value="get://*/hello" />
    </bean>
    <bean id="Hello2" class="cn.cerc.sample.services.HelloWorld" scope="prototype">
        <property name="restPath" value="get://*/hello?ordNo" />
    </bean>
    <bean id="Hello3" class="cn.cerc.sample.services.HelloWorld" scope="prototype">
        <property name="restPath" value="get://*/hello?ordNo/status" />
    </bean>
    <bean id="Hello4" class="cn.cerc.sample.services.HelloWorld" scope="prototype">
        <property name="restPath" value="get://*/hello?ordNo/status/remark" />
    </bean>
    <bean id="Hello5" class="cn.cerc.sample.services.HelloWorld" scope="prototype">
        <property name="restPath" value="get://*/hello/world?ordNo/status/remark" />
    </bean>

    <bean id="ServiceLogin" class="cn.cerc.sample.services.ServiceLogin" scope="prototype">
        <property name="restPath" value="get://*/public/login" />
    </bean>
    <bean id="ServiceUserList" class="cn.cerc.sample.services.ServiceUserList" scope="prototype">
        <property name="restPath" value="get://*/public/users" />
    </bean>
    <bean id="SvrPartInfo.search" class="cn.cerc.sample.services.part.SvrPartInfo" scope="prototype">
        <property name="funcCode" value="search" />
    </bean>
    <bean id="SvrPartInfo.append" class="cn.cerc.sample.services.part.SvrPartInfo" scope="prototype">
        <property name="funcCode" value="append" />
    </bean>
    <bean id="SvrPartInfo.modify" class="cn.cerc.sample.services.part.SvrPartInfo" scope="prototype">
        <property name="funcCode" value="modify" />
    </bean>
    <bean id="SvrPartInfo.delete" class="cn.cerc.sample.services.part.SvrPartInfo" scope="prototype">
        <property name="funcCode" value="delete" />
    </bean>
    <bean id="SvrPartInfo.searchSingle" class="cn.cerc.sample.services.part.SvrPartInfo" scope="prototype">
        <property name="funcCode" value="searchSingle" />
    </bean>
    <bean id="SvrTranAB.tranHsearch" class="cn.cerc.sample.services.tran.SvrTranAB" scope="prototype">
        <property name="funcCode" value="tranHsearch" />
    </bean>
    <bean id="SvrTranAB.tranHsearchSingle" class="cn.cerc.sample.services.tran.SvrTranAB" scope="prototype">
        <property name="funcCode" value="tranHsearchSingle" />
    </bean>
    <bean id="SvrTranAB.tranHappend" class="cn.cerc.sample.services.tran.SvrTranAB" scope="prototype">
        <property name="funcCode" value="tranHappend" />
    </bean>
    <bean id="SvrTranAB.tranHdelete" class="cn.cerc.sample.services.tran.SvrTranAB" scope="prototype">
        <property name="funcCode" value="tranHdelete" />
    </bean>
    <bean id="SvrTranAB.tranBsearch" class="cn.cerc.sample.services.tran.SvrTranAB" scope="prototype">
        <property name="funcCode" value="tranBsearch" />
    </bean>
    <bean id="SvrTranAB.tranBsearchSingle" class="cn.cerc.sample.services.tran.SvrTranAB" scope="prototype">
        <property name="funcCode" value="tranBsearchSingle" />
    </bean>
    <bean id="SvrTranAB.tranBsearDetail" class="cn.cerc.sample.services.tran.SvrTranAB" scope="prototype">
        <property name="funcCode" value="tranBsearDetail" />
    </bean>
    <bean id="SvrTranAB.tranBappend" class="cn.cerc.sample.services.tran.SvrTranAB" scope="prototype">
        <property name="funcCode" value="tranBappend" />
    </bean>
    <bean id="SvrTranAB.tranBdelete" class="cn.cerc.sample.services.tran.SvrTranAB" scope="prototype">
        <property name="funcCode" value="tranBdelete" />
    </bean>
</beans>